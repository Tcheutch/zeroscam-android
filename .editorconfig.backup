root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 4

[*.{kt,kts}]
ktlint_standard_wrapping = enabled
ktlint_standard_trailing-comma-on-call-site = true
ktlint_standard_trailing-comma-on-declaration-site = true
ktlint_standard_package-name = disabled
ktlint_standard_filename = disabled
ij_kotlin_imports_layout = *
ktlint_import-ordering = enabled
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_indent = 4
ktlint_standard_max-line-length = 120

[**/test/**.kt]
ktlint_ignore_back_ticked_identifier = true
ktlint_standard_max-line-length = 160

[**/androidTest/**.kt]
ktlint_ignore_back_ticked_identifier = true

[*.gradle.kts]
max_line_length = 140
